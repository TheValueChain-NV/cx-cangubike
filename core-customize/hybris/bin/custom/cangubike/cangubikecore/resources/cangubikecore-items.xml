<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
        <collectiontype code="FrameMaterialSet" elementtype="FrameMaterialEnum" autocreate="true" type="set"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
        <enumtype generate="true" code="FrameMaterialEnum" autocreate="true" dynamic="true">
            <value code="CARBON"/>
            <value code="ALUMINIUM"/>
            <value code="STEEL"/>
            <value code="TITANIUM"/>
        </enumtype>
    </enumtypes>

    <itemtypes>

        <!-- Add your item definitions here -->
        <typegroup name="CMSComponent">
            <itemtype code="BikeCategoryCarouselComponent" autocreate="true" generate="true" extends="ProductCarouselComponent" jaloclass="com.tvc.cangubike.core.jalo.BikeCategoryCarouselComponent"/>
            <itemtype code="AccessoriesCarouselComponent" autocreate="true" generate="true" extends="ProductCarouselComponent" jaloclass="com.tvc.cangubike.core.jalo.AccessoriesCarouselComponent"/>
            <itemtype code="BikeParagraphComponent"
                      autocreate="true" generate="true" extends="CMSParagraphComponent"
                      jaloclass="com.tvc.cangubike.core.jalo.BikeParagraphComponent">
                <description>CMS Paragraph component with extra attributes</description>
                <attributes>
                    <attribute qualifier="title" type="localized:java.lang.String">
                        <description>Title to be displyed</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="media" type="Media">
                        <description>Url of the media</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="url" type="java.lang.String">
                        <description>Url</description>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>
        </typegroup>
        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Product">
            <itemtype code="Product"
                      autocreate="false" generate="false">
                <description>Represnts a (Bike) product with additional attributes</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the bike is made for</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="frame" type="FrameMaterialEnum">
                        <defaultvalue>em().getEnumerationValue("FrameMaterialEnum","CARBON")</defaultvalue>
                        <description>Bike frame material</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="saddle" type="localized:java.lang.String">
                        <description>Bike's saddle specifications</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="brake" type="localized:java.lang.String">
                        <description>Bike's brake system specifications</description>
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="model_year" type="java.lang.String">
                        <description>advertised model year </description>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.tvc.cangubike.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.tvc.cangubike.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.tvc.cangubike.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>
        <typegroup name="BikeVariant">
            <itemtype code="BikeVariantProduct" extends="ApparelSizeVariantProduct" autocreate="true" generate="true"
                      jaloclass="com.tvc.cangubike.core.jalo.BikeVariantProduct">
                <description>Variant Bike Product with additional attributes</description>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.tvc.cangubike.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

    </itemtypes>
</items>
